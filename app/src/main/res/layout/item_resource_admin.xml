<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#F0F0F0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/fl_icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_light_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_resource_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/agenda"
                app:tint="?attr/colorPrimary"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_admin_resource_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Judul Materi Pembelajaran"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toEndOf="@id/fl_icon_container"
            app:layout_constraintEnd_toStartOf="@id/btn_admin_edit"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_admin_resource_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Sistem Operasi â€¢ Teknik Informatika"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@android:color/darker_gray"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/tv_admin_resource_title"
            app:layout_constraintEnd_toEndOf="@id/tv_admin_resource_title"
            app:layout_constraintTop_toBottomOf="@id/tv_admin_resource_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_admin_edit"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconTint="?attr/colorPrimary"
            app:layout_constraintEnd_toStartOf="@id/btn_admin_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Edit" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_admin_delete"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="?attr/colorError"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Hapus" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>